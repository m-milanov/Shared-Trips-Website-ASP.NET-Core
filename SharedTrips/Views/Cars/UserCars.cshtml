@model IEnumerable<CarServiceModel>

@{
    ViewBag.AllowCarEdit = true;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center my-4">My Cars</h2>
        </div>
    </div>
    <div class="row">

        @if (Model.Count() == 0)
        {
             <div class="col-12">
                 <h4 class="text-center my-4">You don't have cars!</h4>
             </div>
             <div class="col-12 d-flex justify-content-center">
                 <div class="col-3">
                     <a asp-controller="Car" asp-action="Add" class="btn btn-success btn-block text-white">
                         Add Car
                     </a>
                 </div>
             </div>
        }

        <partial name="_CarListingPartial" model="@Model" />

    </div>
</div>

