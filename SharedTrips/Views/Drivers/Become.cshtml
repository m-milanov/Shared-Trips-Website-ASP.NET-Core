@model BecomeDriverFormModel

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" placeholder="Ivan">
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PhoneNumber">Phone Number:</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="0881234567">
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="ProfilePictureUrl">Profile picture link:</label>
            <input asp-for="ProfilePictureUrl" class="form-control" placeholder="...">
            <span asp-validation-for="ProfilePictureUrl" class="small text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>

</form>
